    <div class="card-body p-5 text-white">

      <h2 class="text-center mb-5">Xác nhận mail </h2>

      <form id="myForm" method="POST" action="/api/user/reset">
        <div class="mb-3">
          <label for="description" class="form-label">Mật Khẩu mới</label>
          <input id="acesstoken"class="form-control"  type="text" value="{{acessToken.id}}">
          <input type="text" class="form-control" id="password" name="password" />
